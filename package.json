{
  "name": "movie-chooser",
  "version": "2.0.0",
  "scripts": {
    "start": "npm run deploy && node index",
    "dev": "NODE_ENV=dev nodemon --watch server/ --exec npm run start",
    "clean": "rm -rf client/dist",
    "deploy": "npm run clean && babel client/ -d client/dist/ --minified --copy-files --ignore client/dist/ client/bower_components/",
    "sass": "node-sass client/styles/*.scss client/dist/styles/style.css",
    "watch": "npm run clean && babel client/ -w -d client/dist/ --source-maps inline --copy-files  --ignore client/dist/ client/bower_components/",
    "sass:watch": "node-sass -w client/styles/*.scss client/dist/styles/style.css"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-eslint": "6.0.2",
    "babel-preset-es2015": "^6.9.0",
    "eslint": "2.9.0",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "nodemon": "^1.10.0",
    "pify": "^2.3.0",
    "spdy": "^3.4.4"
  },
  "dependencies": {
    "@webcomponents/custom-elements": "^1.0.0-alpha.3",
    "babel-polyfill": "^6.13.0",
    "babel-preset-node5": "^11.1.0",
    "babel-register": "^6.11.6",
    "body-parser": "^1.15.2",
    "bootstrap-sass": "^3.3.7",
    "bootswatch": "^3.3.7",
    "chalk": "^1.1.3",
    "compression": "^1.6.2",
    "config": "^1.21.0",
    "express": "4.14.0",
    "mongodb": "^2.2.6",
    "node-sass": "^3.11.2",
    "serve-static": "1.11.1"
  }
}

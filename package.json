{
  "name": "movie-chooser",
  "version": "2.2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mjlawrence91/moviechooser.git"
  },
  "license": "MIT",
  "scripts": {
    "build": "npm run clean -s && npm run make-dist -s && npm run make-client -s && npm run make-styles -s && npm run copy-all && npm run build-css && npm run build-js",
    "start": "NODE_CONFIG_DIR=dist/config node dist/index.js",
    "dev": "npm run build && npm run serve",
    "serve": "NODE_ENV=dev NODE_CONFIG_DIR=dist/config nodemon -q -e js,json -w dist dist/index.js",
    "clean": "rm -rf dist",
    "make-dist": "mkdir -p dist",
    "make-client": "mkdir -p dist/client",
    "make-styles": "mkdir -p dist/client/styles",
    "copy-all": "npm run copy-index -s && npm run copy-server && npm run copy-config -s && npm run copy-client",
    "copy-client": "copy \"src/client/**/*.*\" \"!src/client/elements/*.js\" \"!src/client/utils/*.js\" \"!src/client/styles/**/*.*\" dist/client",
    "copy-config": "cp -R config dist",
    "copy-server": "cp -R src/server dist",
    "copy-index": "cp -R index.js dist",
    "build-css": "node build/minifyStyles.js",
    "build-js": "node build/transpiler.js"
  },
  "devDependencies": {
    "babel-eslint": "10.0.3",
    "copy": "^0.3.0",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "nodemon": "^1.10.0",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "rollup": "^1.22.0",
    "rollup-plugin-terser": "^5.1.2"
  },
  "dependencies": {
    "@babel/core": "^7.7.4",
    "@babel/polyfill": "^7.7.0",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.4",
    "body-parser": "^1.15.2",
    "chalk": "^1.1.3",
    "clean-css": "^4.0.9",
    "compression": "^1.6.2",
    "config": "^1.21.0",
    "cors": "^2.8.1",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "firebase": "^7.4.0",
    "helmet": "^3.5.0",
    "spdy": "^3.4.4"
  }
}

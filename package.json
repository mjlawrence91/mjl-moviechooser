{
  "scripts": {
    "start": "npm run deploy && node index",
    "deploy": "npm run clean && babel client/ -d client/dist/ --minified --copy-files",
    "dev": "NODE_ENV=dev nodemon --watch server/ --exec npm run start",
    "watch": "npm run clean && babel client/ -w -d client/dist/ --source-maps inline --copy-files",
    "clean": "rm -rf client/dist"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-eslint": "6.0.2",
    "babel-preset-es2015": "^6.9.0",
    "eslint": "2.9.0",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "nodemon": "^1.10.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.13.0",
    "babel-preset-node5": "^11.1.0",
    "babel-register": "^6.11.6",
    "body-parser": "^1.15.2",
    "chalk": "^1.1.3",
    "config": "^1.21.0",
    "express": "4.14.0",
    "mongodb": "^2.2.6",
    "serve-static": "1.11.1"
  }
}

{
  "scripts": {
    "babel": "babel app.js -d dist --minified",
    "watch": "babel app.js -w -d dist --source-maps inline --plugins transform-flow-strip-types",
    "deploy": "npm run babel && sh deploy.sh",
    "start": "npm run deploy && python -m SimpleHTTPServer",
    "surge": "npm run deploy && surge -p ./dist"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-eslint": "6.0.2",
    "babel-plugin-transform-flow-strip-types": "6.7.0",
    "babel-preset-es2015": "^6.9.0",
    "eslint": "2.9.0",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-flow-vars": "0.4.0",
    "eslint-plugin-promise": "^1.1.0",
    "eslint-plugin-standard": "^1.3.2",
    "flow-bin": "0.23.0"
  }
}
